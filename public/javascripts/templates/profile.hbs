<div class="container-header" style="background: #8d6caa;height: 320px;">
	<div class="row">
		<div class="col-sm-6 col-sm-offset-3 text-center">
			<img src="https://cdn2.iconfinder.com/data/icons/rcons-user/32/male-shadow-fill-circle-512.png" alt="" class="img-rounded mar-lv8 mar-lr0 mar-b0 inline-block" width="150">
		</div>
		<div class="col-sm-6 col-sm-offset-3 text-center">
			<h2 class="mar-lv2 mar-lr0 inline-block" style="color: #fff">
				{{ name }} <b>{{ last_name }}</b>
			</h2>
		</div>
		<div class="col-sm-6 col-sm-offset-3 text-center">
			<div class="row">
				{{#if canEdit}}
					{{#linkTo "edit_profile" model}}Edit{{/linkTo}}
				{{/if}}
				<div class="row">
					<div class="col-md-12">
					  <b style="color: #fff">Edad</b> {{ age }}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
			{{#collection contentBinding="user.entries" class="view-entries"}}
				{{entry-brief model=this class="entries-simple"}}
				{{comments-widget model=this lass="view-comments" }}
				{{#if controller.session.isAuthenticated}}
					{{add-comment-widget model=this submit="publishComment" class="view-add-comments"}}
				{{/if}}					
			{{/collection}}
		</div>
	</div>
</div>
