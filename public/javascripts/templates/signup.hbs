<div class="container">
  <div class="col-xs-8 col-xs-offset-2 col-sm-6 col-sm-offset-3">
    <div class="page-header text-center">
        <h1><b>Crear cuenta</b></h1>
    </div>
    {{#if errorMessage}}
      <div class="alert alert-danger">
        {{errorMessage}}
      </div>
    {{/if}}

    <form {{action "signup" on="submit"}}>
      <div class="form-group">
        <label for="username" class="control-label">Usuario</label>
        {{input type="text" class="form-control" value=username autofocus="autofocus"}}
      </div>
      <div class="form-group">
        <label for="email" class="control-label">Email</label>
        {{input type="text" class="form-control" value=email}}
      </div>
      <div class="form-group">
        <label for="password" class="control-label">Contraseña</label>
        {{input type="password" class="form-control" value=password}}
        <small class="help-block">Minimo de ocho caracteres.</small>
      </div>
      <div class="form-group">
        <label for="confirmPassword" class="control-label">Confirmar contraseña</label>
        {{input type="password" class="form-control" value=confirmPassword}}
      </div>
      <button type="submit" class="btn btn-success pull-right" {{bind-attr disabled="isProcessing"}}><i class="fa fa-rocket"></i> Crear cuenta</button>
    </form>
  </div>
</div>
